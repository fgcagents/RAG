# =============================================================================
# PLANTILLA DE CONFIGURACIÓN - MÓDULO 1: DATA INGESTION PIPELINE
# Copiar este archivo a .env y ajustar los valores según tu entorno
# =============================================================================

# -----------------------------------------------------------------------------
# INSTRUCCIONES DE USO
# -----------------------------------------------------------------------------
# 1. Copiar este archivo: cp .env.example .env
# 2. Editar .env con tus valores específicos
# 3. NO commitear .env a Git (ya está en .gitignore)
# -----------------------------------------------------------------------------

# DIRECTORIOS BASE
INGESTION_RAW_DATA_DIR=data/raw
INGESTION_PROCESSED_DATA_DIR=data/processed
INGESTION_MARKDOWN_OUTPUT_DIR=data/processed/markdown
INGESTION_IMAGES_DIR=data/images

# DOCUMENT LOADER
INGESTION_SUPPORTED_FORMATS=.pdf,.txt,.md,.docx,.doc,.csv,.json,.html,.xml
INGESTION_RECURSIVE_LOAD=true
INGESTION_EXCLUDE_HIDDEN=true

# PDF CONVERTER
INGESTION_PDF_EXTRACT_IMAGES=true
INGESTION_PDF_IMAGE_DPI=150
INGESTION_PDF_ADD_METADATA_HEADER=true

# TEXT CLEANER
INGESTION_REMOVE_EXTRA_WHITESPACE=true
INGESTION_NORMALIZE_UNICODE=true
INGESTION_REMOVE_SPECIAL_CHARS=false
INGESTION_MIN_LINE_LENGTH=3

# METADATA EXTRACTOR
INGESTION_REQUIRED_METADATA_FIELDS=filename,source,file_type
INGESTION_DETECT_LANGUAGE=true
INGESTION_CALCULATE_FILE_HASH=true

# DOCUMENT VALIDATOR
INGESTION_MIN_TEXT_LENGTH=100
INGESTION_MAX_TEXT_LENGTH=10000000
INGESTION_CHECK_DUPLICATES=true
INGESTION_STOP_ON_VALIDATION_ERROR=false

# DOCUMENT STORE
INGESTION_DOCSTORE_BACKEND=simple
INGESTION_DOCSTORE_PATH=data/docstore

# LOGGING
INGESTION_LOG_LEVEL=INFO
INGESTION_LOG_FILE=logs/ingestion.log

# RENDIMIENTO
INGESTION_BATCH_SIZE=10
INGESTION_MAX_WORKERS=4
INGESTION_OPERATION_TIMEOUT=300

# SEGURIDAD
INGESTION_MAX_FILE_SIZE_MB=100

# ENTORNO
ENVIRONMENT=development
DEBUG=true

